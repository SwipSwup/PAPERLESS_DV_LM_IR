@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}
<div class="dashboard-content">
    <h1 class="dashboard-title">Dashboard</h1>
    
    <!-- Statistics Cards -->
    <div class="stats-grid">
        <div class="stat-card success">
            <div class="stat-title">Total Documents</div>
            <div class="stat-value" id="totalDocuments">-</div>
        </div>
        <div class="stat-card info">
            <div class="stat-title">Total Tags</div>
            <div class="stat-value" id="totalTags">-</div>
        </div>
        <div class="stat-card warning">
            <div class="stat-title">Recent Uploads</div>
            <div class="stat-value" id="recentUploads">-</div>
        </div>
        <div class="stat-card danger">
            <div class="stat-title">Access Logs</div>
            <div class="stat-value" id="accessLogs">-</div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="quick-actions">
        <h2 class="section-title">Quick Actions</h2>
        <div class="action-buttons">
            <a href="/Documents" class="action-button">
                <i class="fas fa-file-alt"></i>
                <span>View All Documents</span>
            </a>
            <button class="action-button" onclick="openUploadModal()">
                <i class="fas fa-upload"></i>
                <span>Upload Document</span>
            </button>
            <a href="/Tags" class="action-button">
                <i class="fas fa-tags"></i>
                <span>Manage Tags</span>
            </a>
        </div>
    </div>

</div>

<!-- Upload Modal -->
<div id="uploadModal" class="modal" style="display: none;">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Upload Document</h3>
            <span class="close" onclick="closeUploadModal()">&times;</span>
        </div>
        <div class="modal-body">
            <form id="uploadForm" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="fileInput">Select File:</label>
                    <input type="file" id="fileInput" name="file" accept=".pdf,.doc,.docx,.txt,.jpg,.jpeg,.png" required>
                </div>
                <div class="form-group">
                    <label for="documentTitle">Document Title:</label>
                    <input type="text" id="documentTitle" name="title" placeholder="Enter document title">
                </div>
                <div class="form-group">
                    <label for="documentTags">Tags (comma-separated):</label>
                    <input type="text" id="documentTags" name="tags" placeholder="e.g., invoice, 2024, legal">
                </div>
                <div class="form-group">
                    <label for="documentSummary">Summary (optional):</label>
                    <textarea id="documentSummary" name="summary" rows="3" placeholder="Brief description of the document"></textarea>
                </div>
                <div class="modal-actions">
                    <button type="button" class="btn btn-secondary" onclick="closeUploadModal()">Cancel</button>
                    <button type="submit" class="btn btn-primary">Upload Document</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
// Hardcoded example data for testing
const exampleDocuments = [
    {
        id: 1,
        fileName: "Contract_2024.pdf",
        uploadedAt: "2024-01-15T10:30:00Z",
        summary: "Annual service contract for software maintenance and support services.",
        tags: ["contract", "legal", "2024"]
    },
    {
        id: 2,
        fileName: "Invoice_12345.pdf",
        uploadedAt: "2024-01-14T14:20:00Z",
        summary: "Monthly invoice for cloud services and software licensing fees.",
        tags: ["invoice", "billing", "cloud"]
    },
    {
        id: 3,
        fileName: "Meeting_Notes_Jan15.docx",
        uploadedAt: "2024-01-13T16:45:00Z",
        summary: "Meeting notes from project planning session covering Q1 objectives and deliverables.",
        tags: ["meeting", "notes", "planning"]
    },
    {
        id: 4,
        fileName: "Receipt_Office_Supplies.pdf",
        uploadedAt: "2024-01-12T09:15:00Z",
        summary: "Receipt for office supplies including paper, pens, and other stationery items.",
        tags: ["receipt", "expenses", "office"]
    },
    {
        id: 5,
        fileName: "Report_Q4_2023.pdf",
        uploadedAt: "2024-01-11T11:30:00Z",
        summary: "Quarterly business report covering financial performance and key metrics.",
        tags: ["report", "quarterly", "finance"]
    }
];

const exampleTags = ["contract", "legal", "2024", "invoice", "billing", "cloud", "meeting", "notes", "planning", "receipt", "expenses", "office", "report", "quarterly", "finance"];

function loadDashboard() {
    try {
        // Set document count
        document.getElementById('totalDocuments').textContent = exampleDocuments.length;
        
        // Set tags count
        document.getElementById('totalTags').textContent = exampleTags.length;
        
        // Calculate recent uploads (last 7 days)
        const weekAgo = new Date();
        weekAgo.setDate(weekAgo.getDate() - 7);
        const recentCount = exampleDocuments.filter(doc => new Date(doc.uploadedAt) > weekAgo).length;
        document.getElementById('recentUploads').textContent = recentCount;
        
        // Set access logs (hardcoded)
        document.getElementById('accessLogs').textContent = "42";
        
        
    } catch (error) {
        console.error('Error loading dashboard:', error);
        document.getElementById('totalDocuments').textContent = 'Error';
        document.getElementById('totalTags').textContent = 'Error';
        document.getElementById('recentUploads').textContent = 'Error';
        document.getElementById('accessLogs').textContent = 'Error';
    }
}

// Upload modal functionality
function openUploadModal() {
    document.getElementById('uploadModal').style.display = 'block';
}

function closeUploadModal() {
    document.getElementById('uploadModal').style.display = 'none';
    document.getElementById('uploadForm').reset();
}

// Upload form submission
document.getElementById('uploadForm').addEventListener('submit', function(e) {
    e.preventDefault();
    
    const fileInput = document.getElementById('fileInput');
    const titleInput = document.getElementById('documentTitle');
    const tagsInput = document.getElementById('documentTags');
    const summaryInput = document.getElementById('documentSummary');
    
    if (!fileInput.files[0]) {
        alert('Please select a file to upload');
        return;
    }
    
    // Show success message
    alert('Document uploaded successfully! (Note: This is a demo - no actual file was uploaded)');
    
    // Close modal and reset form
    closeUploadModal();
});

// Close modal when clicking outside
window.onclick = function(event) {
    const modal = document.getElementById('uploadModal');
    if (event.target === modal) {
        closeUploadModal();
    }
}

loadDashboard();
</script>

