<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Paperless</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body { 
            background-color: #1a1a1a !important; 
            color: #ffffff !important; 
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .app-container { 
            display: flex; 
            height: 100vh; 
            width: 100vw; 
        }
        .sidebar { 
            width: 280px; 
            background-color: #2c2c2c !important; 
            display: flex; 
            flex-direction: column; 
            border-right: 1px solid #404040; 
            position: fixed; 
            height: 100vh; 
            z-index: 1000; 
        }
        .main-content { 
            flex: 1; 
            margin-left: 280px; 
            display: flex; 
            flex-direction: column; 
            background-color: #1a1a1a !important; 
        }
        .card { 
            background-color: #2c2c2c !important; 
            border: 1px solid #404040; 
            border-radius: 8px; 
        }
        .navbar { 
            background-color: #28a745 !important; 
        }
        .nav-link { 
            color: #b0b0b0 !important; 
            text-decoration: none; 
        }
        .nav-link:hover { 
            background-color: #3a3a3a !important; 
            color: #ffffff !important; 
        }
        .nav-link.active { 
            background-color: #28a745 !important; 
            color: #ffffff !important; 
        }
        .search-bar { 
            background-color: #28a745 !important; 
            border-radius: 6px; 
            padding: 0.5rem 1rem; 
        }
        .search-bar input { 
            background: none; 
            border: none; 
            color: white; 
            outline: none; 
        }
        .search-bar input::placeholder { 
            color: rgba(255, 255, 255, 0.8); 
        }
        .sidebar-header { 
            padding: 1rem; 
            border-bottom: 1px solid #404040; 
            display: flex; 
            align-items: center; 
            justify-content: space-between; 
        }
        .sidebar-brand { 
            display: flex; 
            align-items: center; 
        }
        .brand-text { 
            font-size: 1.2rem; 
            font-weight: bold; 
            color: #ffffff; 
            background-color: #28a745; 
            padding: 0.5rem 1rem; 
            border-radius: 4px; 
        }
        .sidebar-content { 
            flex: 1; 
            overflow-y: auto; 
            padding: 1rem 0; 
        }
        .nav-section { 
            margin-bottom: 2rem; 
        }
        .nav-section-title { 
            font-size: 0.75rem; 
            font-weight: 600; 
            color: #6c757d; 
            text-transform: uppercase; 
            letter-spacing: 0.5px; 
            padding: 0 1rem 0.5rem; 
            margin-bottom: 0.5rem; 
        }
        .nav-list { 
            list-style: none; 
            padding: 0; 
            margin: 0; 
        }
        .nav-item { 
            margin-bottom: 0.25rem; 
        }
        .nav-link { 
            display: flex; 
            align-items: center; 
            padding: 0.75rem 1rem; 
            color: #b0b0b0; 
            text-decoration: none; 
            transition: all 0.2s ease; 
            position: relative; 
        }
        .nav-link i { 
            width: 20px; 
            margin-right: 0.75rem; 
            text-align: center; 
        }
        .top-header { 
            background-color: #2c2c2c; 
            border-bottom: 1px solid #404040; 
            padding: 1rem 2rem; 
            display: flex; 
            align-items: center; 
            justify-content: space-between; 
            position: sticky; 
            top: 0; 
            z-index: 100; 
        }
        .search-container { 
            flex: 1; 
            max-width: 600px; 
        }
        .page-content { 
            flex: 1; 
            padding: 2rem; 
            overflow-y: auto; 
        }
        
        /* Sidebar toggle functionality */
        .sidebar.collapsed {
            width: 60px;
        }
        
        .sidebar.collapsed .sidebar-content {
            display: none;
        }
        
        .sidebar.collapsed .sidebar-header .brand-text {
            display: none;
        }
        
        .sidebar.collapsed .sidebar-toggle i {
            transform: rotate(180deg);
        }
        
        .main-content.sidebar-collapsed {
            margin-left: 60px;
        }
        
        .sidebar-toggle {
            background: none;
            border: none;
            color:rgb(53, 53, 53);
            cursor: pointer;
            padding: 0.5rem;
            border-radius: 4px;
            transition: all 0.2s ease;
        }
        
        .sidebar-toggle:hover {
            background-color: #3a3a3a;
            color: #ffffff;
        }
    </style>
</head>
<body>
    <div class="app-container">
        <!-- Sidebar Navigation -->
        <nav class="sidebar">
            <div class="sidebar-header">
                <div class="sidebar-brand">
                    <span class="brand-text">Paperless</span>
                </div>
                <button class="sidebar-toggle" type="button">
                    <i class="fas fa-chevron-double-left"></i>
                </button>
            </div>
            
            <div class="sidebar-content">
                <!-- Main Navigation -->
                <div class="nav-section">
                    <ul class="nav-list">
                        <li class="nav-item">
                            <a href="/" class="nav-link">
                                <i class="fas fa-tachometer-alt"></i>
                                <span>Dashboard</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/Documents" class="nav-link">
                                <i class="fas fa-file-alt"></i>
                                <span>Documents</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="sidebar-footer">
                <div class="version-info">Paperless v0.1</div>
            </div>
        </nav>

        <!-- Main Content Area -->
        <div class="main-content">
            <!-- Top Header -->
            <header class="top-header">
                <div class="search-container">
                    <div class="search-bar">
                        <i class="fas fa-search"></i>
                        <input type="text" placeholder="Search documents" id="globalSearch">
                    </div>
                </div>
                <div class="header-actions">
                    <div class="user-menu">
                        <i class="fas fa-user"></i>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                </div>
            </header>

            <!-- Page Content -->
            <main class="page-content">
                @RenderBody()
            </main>
        </div>
    </div>

    <script>
        // Sidebar toggle functionality
        document.addEventListener('DOMContentLoaded', function() {
            const sidebarToggle = document.querySelector('.sidebar-toggle');
            const sidebar = document.querySelector('.sidebar');
            const mainContent = document.querySelector('.main-content');
            
            if (sidebarToggle && sidebar && mainContent) {
                sidebarToggle.addEventListener('click', function() {
                    sidebar.classList.toggle('collapsed');
                    mainContent.classList.toggle('sidebar-collapsed');
                });
            }
            
            // Global search functionality
            const globalSearch = document.getElementById('globalSearch');
            if (globalSearch) {
                globalSearch.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        const searchTerm = this.value.trim();
                        if (searchTerm) {
                            // Redirect to Documents page with search term
                            window.location.href = `/Documents?search=${encodeURIComponent(searchTerm)}`;
                        } else {
                            // If no search term, just go to Documents page
                            window.location.href = '/Documents';
                        }
                    }
                });
            }
        });
    </script>
</body>
</html>