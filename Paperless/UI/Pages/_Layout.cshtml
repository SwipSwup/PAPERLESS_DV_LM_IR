<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Paperless</title>
    <link rel="stylesheet" href="~/css/theme.css" />
    <link rel="stylesheet" href="~/css/modern.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.16.105/pdf.min.js"></script>
    <script>
        pdfjsLib.GlobalWorkerOptions.workerSrc = 'https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.16.105/pdf.worker.min.js';
    </script>
</head>
<body>
    <div class="app-container">
        <header class="main-header">
            <div class="brand">
                <i class="fas fa-layer-group"></i> 
                <span>Paperless</span>
            </div>
            <nav class="nav-links d-flex gap-4">
                <a href="/" class="@(ViewContext.RouteData.Values["Page"]?.ToString() == "/Index" ? "active" : "")" style="font-weight: 500; font-size: 0.95rem;">Dashboard</a>
                <a href="/Documents" class="@(ViewContext.RouteData.Values["Page"]?.ToString() == "/Documents" ? "active" : "")" style="font-weight: 500; font-size: 0.95rem;">Documents</a>
            </nav>
            <div class="header-actions">
                <!-- Removed Profile Button -->
                <a href="/Documents" class="btn btn-secondary" style="padding: 0.4rem 0.8rem;">
                    <i class="fas fa-search"></i>
                </a>
            </div>
        </header>

        <main class="main-content">
            @RenderBody()
        </main>
    </div>

    <script src="~/js/app.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>