@page "/"
@using UI.Services
@inject IDocumentService DocumentService
@inject ITagService TagService
@inject IAccessLogService AccessLogService

<PageTitle>Dashboard - Paperless-ngx</PageTitle>

<div class="dashboard">
    <div class="dashboard-header">
        <h1>Dashboard</h1>
        <p class="dashboard-subtitle">Overview of your document management system</p>
    </div>

    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-file-earmark-text"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">@totalDocuments</div>
                <div class="stat-label">Total Documents</div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-tag"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">@totalTags</div>
                <div class="stat-label">Tags</div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-clock"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">@recentDocuments</div>
                <div class="stat-label">Recent Documents</div>
            </div>
        </div>

        <div class="stat-card">
            <div class="stat-icon">
                <i class="bi bi-graph-up"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">@accessCount</div>
                <div class="stat-label">Access Count</div>
            </div>
        </div>
    </div>

    <div class="dashboard-content">
        <div class="dashboard-section">
            <h2>Recent Documents</h2>
            <div class="recent-documents">
                @if (recentDocumentsList.Any())
                {
                    @foreach (var document in recentDocumentsList.Take(5))
                    {
                        <div class="recent-document-item">
                            <div class="document-icon">
                                <i class="bi bi-file-earmark-text"></i>
                            </div>
                            <div class="document-details">
                                <div class="document-name">@document.FileName</div>
                                <div class="document-date">@document.UploadedAt.ToString("MMM dd, yyyy")</div>
                            </div>
                            <div class="document-tags">
                                @foreach (var tag in document.Tags.Take(2))
                                {
                                    <span class="tag">@tag</span>
                                }
                                @if (document.Tags.Count > 2)
                                {
                                    <span class="tag-more">+@(document.Tags.Count - 2)</span>
                                }
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="no-documents">
                        <i class="bi bi-inbox"></i>
                        <p>No documents found</p>
                    </div>
                }
            </div>
        </div>

        <div class="dashboard-section">
            <h2>Quick Actions</h2>
            <div class="quick-actions">
                <a href="/documents" class="quick-action-btn">
                    <i class="bi bi-file-earmark-plus"></i>
                    <span>Upload Document</span>
                </a>
                <a href="/tags" class="quick-action-btn">
                    <i class="bi bi-tag"></i>
                    <span>Manage Tags</span>
                </a>
                <a href="/documents?view=recent" class="quick-action-btn">
                    <i class="bi bi-clock"></i>
                    <span>View Recent</span>
                </a>
                <a href="/settings" class="quick-action-btn">
                    <i class="bi bi-gear"></i>
                    <span>Settings</span>
                </a>
            </div>
        </div>
    </div>
</div>

@code {
    private int totalDocuments = 0;
    private int totalTags = 0;
    private int recentDocuments = 0;
    private int accessCount = 0;
    private List<Core.DTOs.DocumentDto> recentDocumentsList = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadDashboardData();
    }

    private async Task LoadDashboardData()
    {
        try
        {
            // Load documents
            var documents = await DocumentService.GetAllDocumentsAsync();
            totalDocuments = documents.Count;
            recentDocumentsList = documents.OrderByDescending(d => d.UploadedAt).ToList();
            recentDocuments = recentDocumentsList.Count(d => d.UploadedAt >= DateTime.Now.AddDays(-7));

            // Load tags
            var tags = await TagService.GetAllTagsAsync();
            totalTags = tags.Count;

            // Load access logs
            var accessLogs = await AccessLogService.GetAllAccessLogsAsync();
            accessCount = accessLogs.Sum(log => log.Count);
        }
        catch (Exception ex)
        {
            // Handle error - in a real app, you'd show a proper error message
            Console.WriteLine($"Error loading dashboard data: {ex.Message}");
        }
    }
}